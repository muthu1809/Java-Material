modulus operator: %
modulo operator:

10%2    --> 0
10%3    --> 1
10%4    --> 2
10%6    --> 4
10%5    --> 0

5%10    --> 0
 
int no =1;
		while(no <=30) {
			if (no%3 ==0) {
				System.out.println(no + " multiple of 3");
			}
			else if (no%5==0) {
				System.out.println(no + " multiple of 5");
			}
			
			no = no+1;
		}

